@model Customer
@{
string title = " Tahmin Düzenle ";
ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName">User Name</label>
        <input asp-for="UserName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DolarTahmin">Dolar Tahmin</label>
        <input asp-for="DolarTahmin" class="form-control">
    </div>
  
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>